{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">
        <div class="col-lg-12">    
            <h1 class="page-header">Изменение пароля</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
    <div class="row" >
        <div class="col-lg-4 col-md-6 col-sm-8 col-xs-10">
            <form action="{{ path('fos_user_change_password') }}"  method="POST" class="fos_user_change_password">
                {{ form_widget(form) }}
                <div style="margin-top: 10px;">
                    <input class="btn btn-primary btn-lg" type="submit" value="{{ 'change_password.submit'|trans }}" />
                </div>
            </form>
        </div>
    </div>
</div>