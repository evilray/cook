{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}


{% block fos_user_content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">


                <h1 class="">Представьтесь пожалуйста</h1>

                <form  action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <fieldset>
                        <div class="form-group">
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input class="form-control" type="text" id="username" name="_username" value="" placeholder="{{ 'security.login.username'|trans }}" required="required" autofocus />
                        </div>
                        <div class="form-group">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input class="form-control" placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" name="_password" required="required" />
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                {{ 'security.login.remember_me'|trans }}
                            </label>
                        </div>
                        <div class="form-group" style="position: relative">
                            <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />


                        </div>
                        {% if error %}
                            <div class="alert alert-danger alert-dismissable">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <a href="{{path('fos_user_resetting_request')}}">Забыли пароль?</a>
                        </div>

                        <div>
                            <h4 class="page-title">Войти через</h4>
                            <ul class="lis-social-list">
                                <li><a href="/login/vkontakte"><img src="{{ asset('i/icons/vkontakte.png') }}"> </a></li>
                                <li><a href="/login/facebook"><img src="{{ asset('i/icons/facebook.png') }}"> </a></li>

                                <li><a href="/login/google"><img src="{{ asset('i/icons/google_plus.png') }}"> </a></li>
                                <li><a href="/login/odnoklassniki"><img src="{{ asset('i/icons/odnoklassniki.png') }}"> </a></li>
                                <!--li><a href="/login/twitter"><img src="{{ asset('i/icons/twitter.png') }}"> </a></li-->
                            </ul>
                        </div>
                    </fieldset>
                </form>

            </div>
        </div>
    </div>




{% endblock fos_user_content %}
