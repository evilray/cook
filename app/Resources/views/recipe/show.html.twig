{% extends 'base.html.twig' %}

{% block body %}
    <div class="body">
        <div><h1>{{ recipe.name }}</h1></div>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script> <!-- 33 KB -->

        <!-- fotorama.css & fotorama.js. -->
        <link href="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet"> <!-- 3 KB -->
        <script src="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js"></script> <!-- 16 KB -->


        <div class="fotorama"
             data-width="600"
             data-height="400"
             data-nav="thumbs"
             data-autoplay="true">
            {% for photo in recipe.photos %}
                <img src="{{ photo.image }}"/>
            {% endfor %}
        </div>


        <div class="line">
            Время приготовления: {{ recipe.duration }}
            На {{ recipe.portions }} {{ 'порция|порции|порций'|transplural(recipe.portions) }}
        </div>

        <div class="line-ing">Список ингридиентов</div>


        <div class="recipe">{{ recipe.description|raw }}</div>



            Createdat
            {% if recipe.createdAt %}{{ recipe.createdAt|date('Y-m-d H:i:s') }}{% endif %}

            Updateat
            {% if recipe.updateAt %}{{ recipe.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>



        <div class="back"><a href="{{ path('recipe_index') }}">Back to the list</a></div>

        <div class="edit"><a href="{{ path('recipe_edit', { 'id': recipe.id }) }}">Edit</a></div>

        {{ form_start(delete_form) }}
        <div class="delete"><input type="submit" value="Delete"></div>
        {{ form_end(delete_form) }}

    </div>
{% endblock %}
